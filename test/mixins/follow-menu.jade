include ./link-item.jade
mixin follow-menu(activeItem)
  // Following Menu
  .ui.large.top.fixed.hidden.menu
    .ui.container
      each item in menus.main
        +link-item(item, activeItem)
  
      .right.menu
        each item in menus.session
          .item
            a.ui.button(href='#{item.link}')= item.label
