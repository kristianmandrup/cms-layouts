doctype html
html
  head
    // Standard Meta
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    // Site Properities
    title Manticore CMS
    script(src='../../node_modules/jquery/dist/jquery.min.js')
    script(src='../../node_modules/dropzone/dist/min/dropzone.min.js')
    link(rel='stylesheet', type='text/css', href='../../node_modules/dropzone/dist/min/dropzone.min.css')
    script(src='../dist/semantic.min.js')
    script(src='home/page.js')
    link.ui(rel='stylesheet', type='text/css', href='../dist/semantic.min.css')
    link(rel='stylesheet', type='text/css', href='home/page.css')
  body
    // Following Menu
    .ui.large.top.fixed.hidden.menu
      .ui.container
        a.item Home
        a.item(href='./cms-pages.html') Pages
        a.item(href='./cms-objects.html') Objects
        a.item(href='./cms-lists.html') Lists
        a.item(href='./cms-blocks.html') Blocks
        a.active.item(href='./cms-images.html') Images
        a.item(href='./cms-layouts.html') Layouts
        .right.menu
          .item
            a.ui.button Log in
          .item
            a.ui.primary.button Sign Up
    // Sidebar Menu
    .ui.vertical.inverted.sidebar.menu
      a.item Home
      a.item(href='./cms-pages.html') Pages
      a.item(href='./cms-objects.html') Objects
      a.item(href='./cms-lists.html') Lists
      a.item(href='./cms-blocks.html') Blocks
      a.active.item(href='./cms-images.html') Images
      a.item(href='./cms-layouts.html') Layouts
      a.item Login
      a.item Signup
    // Page Contents
    .pusher
      .ui.sticky.inverted.vertical.center.aligned.segment
        .ui.container
          .ui.large.secondary.inverted.pointing.menu
            a.toc.item
              i.sidebar.icon
            a.item Home
            a.item(href='./cms-pages.html') Pages
            a.item(href='./cms-objects.html') Objects
            a.item(href='./cms-lists.html') Lists
            a.item(href='./cms-blocks.html') Blocks
            a.active.item(href='./cms-images.html') Images
            a.item(href='./cms-layouts.html') Layouts
            .right.item
              a.ui.inverted.button Log in
              a.ui.inverted.button Sign Up
      .ui.vertical.segment
        .ui.list
          .item
            .right.floated.content
              .ui.button
                i.remove.icon
                |             Remove
            img.ui.avatar.image(src='http://lorempixel.com/200/200/sports/')
            .content
              a.header Victory
              .description Dark horse wins the race
      .ui.vertical.segment
        .ui.middle.aligned.stackable.grid.container
          .row
            .eight.wide.column
              .ui.positive.message
                | Enable some basic transformations of each uploaded image.
                | Images to be better presented, perhaps some kind of gallery or thumbnails/zoom view?
              .ui.hidden.divider
              img.ui.image(src='http://lorempixel.com/400/200/sports/')
              img.ui.image(src='http://lorempixel.com/200/100/sports/')
              img.ui.image(src='http://lorempixel.com/64/64/sports/')
              .ui.hidden.divider
              form.ui.form
                .field
                  input.meta-data(type='text', name='name', placeholder='Name')
                .field
                  input(type='text', name='title', placeholder='Caption')
                .field
                  textarea.meta-data(name='description', placeholder='Description')
                .two.fields
                  .twelve.wide.field
                    select.ui.dropdown.meta-data(name='categories', multiple='')
                      option(value='') Categories
                      option(value='ad') Ad
                      option(value='article') Article
                  .four.wide.field
                    button.ui.button
                      i.icon.add
                      |                   Category
                .two.fields
                  .twelve.wide.field
                    select.ui.dropdown.meta-data(name='tags', multiple='')
                      option(value='') Tags
                      option(value='banner') banner
                      option(value='story') story
                  .four.wide.field
                    button.ui.button
                      i.icon.add
                      |                   Tag
                .ui.buttons
                  button.ui.button Cancel
                  .or
                  button.ui.positive.button Save
                .ui.right.floated.buttons
                  .ui.floating.dropdown.labeled.search.icon.right.floated.button
                    i.list.icon
                    span.text Add to
                    .menu
                      .item Top banners
                      .item Logos
                      .item Ads
                      .item Users
                  button.ui.button Publish
                  button.ui.secondary.button Preview
