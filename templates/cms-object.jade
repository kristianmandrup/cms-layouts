doctype html
| See /docs
html
  head
    // Standard Meta
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    // Site Properities
    title Manticore CMS
    script(src='../../node_modules/jquery/dist/jquery.min.js')
    script(src='../../node_modules/sortablejs/Sortable.min.js')
    script(src='../dist/semantic.min.js')
    script(src='home/page.js')
    link.ui(rel='stylesheet', type='text/css', href='../dist/semantic.min.css')
    link(rel='stylesheet', type='text/css', href='home/page.css')
  body
    // Following Menu
    .ui.large.top.fixed.hidden.menu
      .ui.container
        a.item(href='./home.html') Home
        a.item(href='./cms-pages.html') Pages
        a.active.item(href='./cms-objects.html') Objects
        a.item(href='./cms-lists.html') Lists
        a.item(href='./cms-blocks.html') Blocks
        a.item(href='./cms-images.html') Images
        a.item(href='./cms-layouts.html') Layouts
        .right.menu
          .item
            a.ui.button Log in
          .item
            a.ui.primary.button Sign Up
    // Sidebar Menu
    .ui.vertical.inverted.sidebar.menu
      a.item(href='./home.html') Home
      a.item(href='./cms-pages.html') Pages
      a.active.item(href='./cms-objects.html') Objects
      a.item(href='./cms-lists.html') Lists
      a.item(href='./cms-blocks.html') Blocks
      a.item(href='./cms-images.html') Images
      a.item(href='./cms-layouts.html') Layouts
      a.item Login
      a.item Signup
    // Page Contents
    .pusher
      .ui.sticky.inverted.vertical.center.aligned.segment
        .ui.container
          .ui.large.secondary.inverted.pointing.menu
            a.toc.item
              i.sidebar.icon
            a.item(href='./home.html') Home
            a.item(href='./cms-pages.html') Pages
            a.active.item(href='./cms-objects.html') Objects
            a.item(href='./cms-lists.html') Lists
            a.item(href='./cms-blocks.html') Blocks
            a.item(href='./cms-images.html') Images
            a.item(href='./cms-layouts.html') Layouts
            .right.item
              a.ui.inverted.button Log in
              a.ui.inverted.button Sign Up
      .ui.vertical.segment
        .ui.middle.aligned.stackable.grid.container
          .row
            .eight.wide.column
              .ui.positive.message
                | Your Object is valid
              .ui.segment
                form.ui.form
                  .field
                    input(type='text', name='name', placeholder='Name')
                  .ui.hidden.divider
                  #new-object.ui.list
                    .item
                      button#target-placeholder.ui.basic.button
              script(type='text/javascript').
                $(function() {
                // Grouping
                var groups = {};
                groups.new = document.getElementById('new-object');
                Sortable.create(groups.new, { group: 'objects' });
                groups.a = document.getElementById('available');
                Sortable.create(groups.a, { group: 'objects' });
                var content = [
                { title: 'Newcastle' },
                { title: 'Manchester United' },
                { title: 'Chelsea' },
                { title: 'Birmingham' },
                { title: 'QPR' }
                ];
                $('.ui.search').search({
                source: content
                });
                });
              style(media='screen').
                #target-placeholder {
                box-shadow: none;
                border-style: dotted;
                font-weight: 100;
                }
              .ui.segment
                .ui.header
                  | Available Objects
                form.ui.form
                  .field
                    .ui.category.search
                      .ui.icon.input
                        input.prompt(type='text', placeholder='Search objects...')
                        i.search.icon
                      .results
                  #available.ui.list
                    .item
                      button.ui.button
                        i.remove.icon
                        |                     Manchester United
                    div
                      button.ui.button
                        i.remove.icon
                        |                       Chelsea
              .ui.buttons
                button.ui.button Cancel
                .or
                button.ui.positive.button Save
              .ui.right.floated.buttons
                .ui.floating.dropdown.labeled.search.icon.right.floated.button
                  i.list.icon
                  span.text Add to
                  .menu
                    .item Top banners
                    .item Logos
                    .item Ads
                    .item Users
                button.ui.button Publish
                button.ui.secondary.button Preview
