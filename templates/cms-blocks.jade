doctype html
html
  head
    // Standard Meta
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    // Site Properities
    title Manticore CMS
    script(src='../../node_modules/jquery/dist/jquery.min.js')
    script(src='../dist/semantic.min.js')
    script(src='home/page.js')
    link.ui(rel='stylesheet', type='text/css', href='../dist/semantic.min.css')
    link(rel='stylesheet', type='text/css', href='home/page.css')
  body
    // Following Menu
    .ui.large.top.fixed.hidden.menu
      .ui.container
        a.item Home
        a.item(href='./cms-pages.html') Pages
        a.item(href='./cms-objects.html') Objects
        a.item(href='./cms-lists.html') Lists
        a.active.item(href='./cms-blocks.html') Blocks
        a.item(href='./cms-images.html') Images
        a.item(href='./cms-layouts.html') Layouts
        .right.menu
          .item
            a.ui.button Log in
          .item
            a.ui.primary.button Sign Up
    // Sidebar Menu
    .ui.vertical.inverted.sidebar.menu
      a.item Home
      a.item(href='./cms-pages.html') Pages
      a.item(href='./cms-objects.html') Objects
      a.item(href='./cms-lists.html') Lists
      a.active.item(href='./cms-blocks.html') Blocks
      a.item(href='./cms-images.html') Images
      a.item(href='./cms-layouts.html') Layouts
      a.item Login
      a.item Signup
    // Page Contents
    .pusher
      .ui.sticky.inverted.vertical.center.aligned.segment
        .ui.container
          .ui.large.secondary.inverted.pointing.menu
            a.toc.item
              i.sidebar.icon
            a.item Home
            a.item(href='./cms-pages.html') Pages
            a.item(href='./cms-objects.html') Objects
            a.item(href='./cms-lists.html') Lists
            a.active.item(href='./cms-blocks.html') Blocks
            a.item(href='./cms-images.html') Images
            a.item(href='./cms-layouts.html') Layouts
            .right.item
              a.ui.inverted.button Log in
              a.ui.inverted.button Sign Up
      .ui.vertical.segment
        .ui.middle.aligned.stackable.grid.container
          .row
            .eight.wide.column
              .ui.positive.message
                | Your block is valid
              form.ui.form
                .field
                  .ui.floating.dropdown.labeled.search.icon.button
                    i.world.icon
                    span.text Select Language
                    .menu
                      .item Arabic
                      .item Chinese
                      .item Danish
                      .item Dutch
                .field
                  input(type='text', name='name', placeholder='Name')
                .field
                  input(type='text', name='title', placeholder='Title')
                .two.fields
                  .twelve.wide.field
                    select.ui.dropdown.meta-data(name='categories', multiple='')
                      option(value='') Categories
                      option(value='ad') Ad
                      option(value='article') Article
                  .four.wide.field
                    button.ui.button
                      i.icon.add
                      |                   Category
                .two.fields
                  .twelve.wide.field
                    select.ui.dropdown.meta-data(name='tags', multiple='')
                      option(value='') Tags
                      option(value='banner') banner
                      option(value='story') story
                  .four.wide.field
                    button.ui.button
                      i.icon.add
                      |                   Tag
                .field
                  select.ui.dropdown(name='templates', multiple='')
                    option(value='') Templates
                    option(value='top-banner') Top banner
                    option(value='side-banner') Side banner
                .field
                  textarea(name='summary', rows='2', placeholder='Summary')
                .field
                  textarea(name='content', placeholder='Content')
                .field.blue
                  textarea(name='description', placeholder='Description')
                .ui.striped.segment
                  .ui.buttons
                    button.ui.button Cancel
                    .or
                    button.ui.positive.button Save
                  .ui.right.floated.buttons
                    .ui.floating.dropdown.labeled.search.icon.right.floated.button
                      i.list.icon
                      span.text Add to
                      .menu
                        .item Top banners
                        .item Logos
                        .item Ads
                        .item Users
                    button.ui.button Publish
                    button.ui.secondary.button Preview
